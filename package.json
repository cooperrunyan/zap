{
  "name": "zap",
  "version": "0.0.0",
  "license": "EPL-2.0",
  "main": "main/index.js",
  "productName": "Zap",
  "author": "Cooper Runyan",
  "description": "Terminal app",
  "scripts": {
    "dev": "concurrently \"yarn dev:vite\" \" yarn dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "yarn build:electron && electron .",
    "rebuild": "electron-rebuild",
    "build": "yarn build:cli && yarn build:vite && yarn build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p electron",
    "build:cli": "deno compile -A --unstable --output cli/zap ./cli/index.ts",
    "dist": "yarn build && electron-builder",
    "pack": "yarn build && electron-builder --dir",
    "clean": "rimraf dist main src/out",
    "type-check": "tsc",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^1.2.0",
    "electron-is-dev": "^2.0.0",
    "fs-extra": "^10.1.0",
    "node-pty": "^0.10.1",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "sass": "^1.52.1",
    "vite": "^2.8.6",
    "xterm": "^4.18.0",
    "xterm-addon-fit": "^0.5.0",
    "xterm-for-react": "^1.0.4",
    "yaml": "^2.1.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.22",
    "@types/react": "16.14.0",
    "@types/react-dom": "^16.9.16",
    "concurrently": "^7.0.0",
    "electron": "^17.1.2",
    "electron-builder": "^23.0.3",
    "electron-rebuild": "^3.2.7",
    "prettier": "2.6.0",
    "typescript": "^4.6.2"
  },
  "build": {
    "asar": true,
    "icon": "./resources/icon.icns",
    "files": [
      "main",
      "src/out"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "extraResources": [
      "cli/zap"
    ]
  }
}
