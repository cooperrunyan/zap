{
  "name": "zap",
  "version": "1.0.0",
  "license": "EPL-2.0",
  "main": "compiled/electron/index.js",
  "productName": "Zap",
  "author": "Cooper Runyan",
  "description": "Terminal app",
  "scripts": {
    "dev": "concurrently \"yarn vite\" \"yarn tsc -p electron && NODE_ENV=development yarn electron .\"",
    "build": "tsc -p electron && vite build && electron-builder",
    "clean": "rimraf dist compiled",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "fs-extra": "^10.1.0",
    "node-pty": "^0.10.1",
    "sass": "^1.52.1",
    "vite": "^2.8.6",
    "xterm": "^4.18.0",
    "xterm-addon-fit": "^0.5.0",
    "yaml": "^2.1.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.22",
    "concurrently": "^7.0.0",
    "electron": "^17.1.2",
    "electron-builder": "^23.0.3",
    "prettier": "2.6.0",
    "typescript": "^4.6.2"
  },
  "build": {
    "appId": "com.cooperrunyan.zap",
    "productName": "Zap",
    "asar": true,
    "icon": "./resources/icon.icns",
    "files": [
      "compiled/client",
      "compiled/electron"
    ],
    "mac": {
      "target": [
        {
          "target": "tar.gz",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "pkg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "darkModeSupport": true,
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "icon": "./resources/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "msi",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "category": "System",
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "apk",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "pacman",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "directories": {
      "buildResources": "resources"
    },
    "extraResources": [
      "settings-schema.json"
    ]
  }
}
